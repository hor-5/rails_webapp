<p id="notice" class="text-success text-center m-3"><%= notice %></p>



<h1><i class="fas fa-users"></i> Listado de personas </h1>

<%= link_to 'agregar +', new_persona_path, class:"btn btn-dark rounded-pill"%>

<table class="table table-hover mt-2 ">
  <thead class="bg-primary text-white">
    <tr>
      <th>Dni</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Fecha nac</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.dni %></td>
        <td><%= persona.nombre %></td>
        <td><%= persona.apellido %></td>
        <td><%= persona.fecha_nac.strftime("%d/%m/%Y") %></td>
        <td><%= link_to "Ver", persona, class:"btn btn-dark btn-sm rounded-pill" %></td>
        <td><%= link_to 'Editar', edit_persona_path(persona), class:"btn btn-warning btn-sm rounded-pill" %></td>
        <td><%= link_to 'Eliminar', persona, method: :delete, data: { confirm: '¿Está seguro de eliminar el registro de '+persona.nombre+'?'} , class:"btn btn-danger btn-sm rounded-pill"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-12 text-center mt-1">
    <h3>El promedio de edades es de <%= @promedio %> años.</h3>
  </div>
</div>


